{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "HTMLclass": {
          "type": "string",
          "enum": [
            "wahi",
            "sahabi",
            "tabei",
            "qari7",
            "rawi",
            "qari10"
          ]
        },
        "text": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "required": [
            "name"
          ]
        },
        "image": {
          "type": "string"
        },
        "parent": {
          "type": "integer"
        },
        "childrenDropLevel": {
          "type": "integer",
          "enum": [
            0,
            1,
            2,
            3
          ]
        },
        "uncles": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "pseudo": {
          "type": "boolean"
        }
      },
      "required": [
        "id"
      ]
    }
  }